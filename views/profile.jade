extends layout

block content
    div.container
        div.page-header.text-center
            h1
                span.fa.fa-anchor
                Profile Page
            a(href='logout', class='btn btn-default btn-sm') Logout
        div.row
            div.col-sm-6
                div.well
                    h3
                        span(class='fa fa-user')
                        Local
                    p
                        strong id #{user.id}
                    p
                        strong email #{user.email}
                    p
                        strong password #{user.password}
